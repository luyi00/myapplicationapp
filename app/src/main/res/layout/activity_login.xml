<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg">
    <EditText
        android:id="@+id/lo_name"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/loginname"
        android:layout_below="@+id/img01"
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_dark"
        android:hint="请输入用户名" />
    <EditText
        android:id="@+id/lo_pass"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/loginpass"
        android:layout_below="@+id/lo_name"
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_dark"
        android:hint="请输入密码" />
    <ImageView
        android:id="@+id/img01"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
    <Button
        android:id="@+id/b_sure"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lo_pass"
        android:layout_centerHorizontal="true"
        android:text="登入"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/b_reg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b_sure"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="注册"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/loginname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="49dp"
        android:text="账户："
        android:textSize="20dp"
        android:layout_below="@+id/img01"/>
    <TextView
        android:id="@+id/loginpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/loginname"
        android:text="密码："
        android:textSize="20dp" />

</RelativeLayout>
